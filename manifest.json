{
	"description": "",
	"manifest_version": 2,
	"name": "Extension_Firefox",
	"version": "1.0",
	"homepage_url": "https://github.com/Bidis93/Extension-Firfox",
	"icons": {
		"48": "icons/beasts-48.png"
	},

	"permissions": [
		"activeTab"
	],

	"browser_action": {
		"default_icon": "icons/beasts-32.png",
		"theme_icons": [{
			"light": "icons/beasts-32-light.png",
			"dark": "icons/beasts-32.png",
			"size": 32
		}],
		"default_title": "Extension_Firefox",
		"default_popup": "popup/popup_extension_firefox.html"
	},

	"web_accessible_resources": [
		"beasts/frog.jpg",
		"beasts/turtle.jpg",
		"beasts/snake.jpg"
	]
}